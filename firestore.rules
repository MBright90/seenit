rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read: 
        if true;
      allow write: 
        if request.auth != null;
      allow update, delete: 
        if request.auth.uid == uid;
    }
    match /posts/{ID} {
      allow read: 
        if true;
      allow write:
        if request.auth != null;
      allow update, delete:
        if request.auth.uid == resource.data.authorID;
    }
    match /comments/{ID} {
      allow read: 
        if true;
      allow write:
        if request.auth != null;
      allow update, delete:
        if request.auth.uid == resource.data.authorID;
    }
  }
}
